def branch_version = "bookStore-${UUID.randomUUID().toString()}"

pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
spec:
  containers:
  - name: maven
    image: maven:3.6-alpine
    volumeMounts:
    - mountPath: /root/.m2
      name: m2-volume
    - mountPath: /root/lib
      name: lib-volume    
    command:
    - cat
    tty: true
  - name: docker
    image: docker
    volumeMounts:
    - mountPath: /root/lib
      name: lib-volume
    command:
    - cat
    tty: true
  - name: kubectl
    image: cnych/kubectl
    volumeMounts:
    - mountPath: /root/.kube
      name: kube-volume
    command:
    - cat
    tty: true
  volumes:
  - name: m2-volume
    hostPath:
      path: /var/run/m2
      type: DirectoryOrCreate
  - name: lib-volume
    hostPath:
      path: /var/run/lib
      type: DirectoryOrCreate
  - name: kube-volume
    hostPath:
      path: /home/jenkins/.kube
      type: DirectoryOrCreate
"""
    }
  }
  stages {
    stage('Run MVN') {
      steps {
        container('maven') {
          dir('bookStore') {
            sh 'mvn clean package'
            sh "mkdir -p /root/lib/${branch_version}"
            sh "cp Dockerfile /root/lib/${branch_version}/"
            sh "cp -r target /root/lib/${branch_version}/"
          }
        }
      }
    }
    stage('Run Docker') {
      steps {
        container('docker') {
          dir("/root/lib/${branch_version}") {
            sh 'docker --version'
          }
        }
      }
    }
    stage('Run kubectl') {
      steps {
        container('kubectl') {
          sh 'kubectl get pods'
        }
      }
    }
  }
}
