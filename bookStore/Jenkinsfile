pipeline {
  agent {
    kubernetes {
      yaml """
---
apiVersion: v1
kind: Pod
metadata:
spec:
  containers:
  - name: maven
    image: maven:3.6-alpine
    volumeMounts:
    - mountPath: /root/.m2
      name: m2-volume
    command:
    - cat
    tty: true
  - name: kubectl
    image: cnych/kubectl
    volumeMounts:
    - mountPath: /root/.kube
      name: kube-volume
    command:
    - cat
    tty: true
  volumes:
  - name: kube-volume
    hostPath:
      path: /home/jenkins/.kube
      type: DirectoryOrCreate
  - name: m2-volume
    hostPath:
      path: /var/run/m2
      type: DirectoryOrCreate
  - name: kube-volume
    hostPath:
      path: /home/jenkins/.kube
      type: DirectoryOrCreate
"""
    }
  }
  stages {
    stage('Run mvn') {
      steps {
        container('maven') {
          sh 'mvn --version'
        }
      }
    }
    
    stage('Run kubectl') {
      steps {
        container('kubectl') {
          sh 'kubectl get pods'
        }
      }
    }
  }
}
